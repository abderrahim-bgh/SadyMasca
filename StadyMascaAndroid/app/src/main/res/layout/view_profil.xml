<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"

            >


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profil_image"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/logoapp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:orientation="vertical">

            <TextView

                android:id="@+id/profil_fullName"

                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="unv masca"
                android:textColor="#000"
                android:textSize="30dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"

                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/person"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/profil_email1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"

                        />
                    <TextView
                        android:id="@+id/profil_email"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User00@unv_mascara.com"
                        android:textColor="#404042"
                        android:textSize="18dp"
                        android:layout_marginLeft="16dp" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"

                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/scool"

                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/profil_dep"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"

                        /><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/profil_dep1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="your deprt"
                        android:textColor="#404044"
                        android:textSize="18dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>