<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".publication">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/back"
          android:layout_width="46dp"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:src="@drawable/back"
           />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:layout_weight="1"/>

      <ImageView
          android:id="@+id/img"
          android:layout_width="26dp"
          android:layout_height="32dp"
          android:src="@drawable/pic"
          android:layout_gravity="center_vertical"
           />

      <Button
          android:id="@+id/sharebtn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#00000000"
          android:text="Share"
          android:textColor="#c815cf"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

   </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1.5dp"
       android:background="#0096d2"
       android:layout_marginTop="8dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
      <TextView
          android:id="@+id/fullName3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:textColor="#000"
          android:layout_marginBottom="20dp"
          android:layout_marginLeft="20dp"
          android:text="FullName"
          android:textSize="25dp"
          android:textStyle="bold" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="20dp"
       android:layout_marginBottom="10dp"
      android:orientation="horizontal">
   <Spinner
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_marginRight="10dp"
       android:id="@+id/sp_pub1"
       android:layout_height="wrap_content"/>
      <Spinner
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_marginRight="10dp"
          android:id="@+id/sp_pub0"
          android:layout_height="wrap_content"/>
      <Spinner
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_marginRight="10dp"
          android:id="@+id/sp_pub"
          android:layout_height="wrap_content"/>
   <androidx.appcompat.widget.AppCompatSpinner
       android:id="@+id/year"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:layout_marginBottom="5dp" />
   </LinearLayout>



   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="20dp"
       android:textSize="22dp"
       android:layout_marginBottom="10dp"
       android:textStyle="bold"
       android:hint="title"
       android:id="@+id/share_title"/>

   <EditText
       android:id="@+id/share_text"
       android:gravity="start"

       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_marginHorizontal="15dp"
       android:layout_weight="1"
       android:hint="What do you mean ?" />

   <ImageView
       android:id="@+id/img_pub"
       android:layout_marginHorizontal="15dp"
       android:layout_weight="2"
       android:layout_width="match_parent"
       android:layout_marginVertical="10dp"
       android:layout_height="0dp"/>
   </LinearLayout>

</LinearLayout>