            android:layout_height="wrap_content"
            android:text="@string/lastName"
            android:textColor="#404044"
            android:textSize="18dp"
            android:layout_marginLeft="16dp" />

    </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
