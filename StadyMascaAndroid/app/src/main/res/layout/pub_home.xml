<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pub_id"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardElevation="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgProf"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logoapp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
            <TextView
                android:id="@+id/trnsmiter"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:text="text1"
                android:textColor="#101B59"
                android:textSize="22dp"
                android:textStyle="bold" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_pub"
                        />
                    </LinearLayout>


                <TextView
                    android:id="@+id/pub_lieu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:text="text"
                    android:textColor="#050B27"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/menu_pub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_more_horiz_24"

                    />
                <ImageView
                    android:id="@+id/menu_pub_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_more_horiz_24"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/datte"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:layout_marginLeft="20dp"
                android:text="date"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:text="text2"
                android:textColor="#0C0C0C"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:text="text3"
                android:textColor="#0C0C0C"
                android:textSize="18dp" />


            <ImageView
                android:id="@+id/img_pub"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:scaleType="fitStart"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                 />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>